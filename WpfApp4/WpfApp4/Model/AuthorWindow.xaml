<Window x:Class="WpfApp4.Model.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4.Tools"
        mc:Ignorable="d"
        Title="AuthorWindow" Height="540" Width="460">
    <Window.Resources>
        <local:LanguageToColorConverter x:Key="languageToColorConverter"/>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="local:MyCommands.Ok"
                        Executed="OkCommand_Executed"
                        CanExecute="OkCommand_CanExecute"/>
        <CommandBinding Command="local:MyCommands.Cancel"
                        Executed="Cancel_Executed"
                        CanExecute="Cancel_CanExecute"/>

    </Window.CommandBindings>
    <Grid Background="{Binding Language, Converter={StaticResource languageToColorConverter}}">
        <Grid.Resources>
            <local:IsNewToTextConverter x:Key="isNewToTextConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Header-->
        <Label Grid.Column="0" Grid.Row="0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="20" 
               Content="{Binding IsNew, Converter={StaticResource isNewToTextConverter}}"/>
        <Label Grid.Column="1" Grid.Row="0"
               HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="20" 
               Content="Author"/>
        <!--FirstName-->
        <Label Grid.Column="0" Grid.Row="1" FontSize="15" Content="First name" Margin="5,10,5,10"/>
        <TextBox x:Name="newFirstName" Grid.Column="1" Grid.Row="1" Margin="5,10,5,10" FontSize="15" VerticalContentAlignment="Center"
                 Text="{Binding FirstName}"/>
        <!--LastName-->
        <Label Grid.Column="0" Grid.Row="2" FontSize="15" Content="Last name" Margin="5,10,5,10"/>
        <TextBox x:Name="newLastName" Grid.Column="1" Grid.Row="2" Margin="5,10,5,10" FontSize="15" VerticalContentAlignment="Center"
                 Text="{Binding LastName}"/>
        <!--BirthDate-->
        <Label Grid.Column="0" Grid.Row="3" FontSize="15" Content="Birth date" Margin="5,10,5,10"/>
        <DatePicker x:Name="newDateOfBirth" Grid.Column="1" Grid.Row="3" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,5,10"
                   SelectedDate="{Binding BirthDate}" SelectedDateFormat="Short" />
        <!--Country-->
        <Label Grid.Column="0" Grid.Row="4" FontSize="15" Content="Country" Margin="5,10,5,10"/>
        <ComboBox x:Name="newCountry" Grid.Column="1" Grid.Row="4" FontSize="15" Margin="5,10,5,10"
                  SelectedItem="{Binding Country}"/>
        <!--Language-->
        <Label Grid.Column="0" Grid.Row="5" FontSize="15" Content="Language" Margin="5,10,5,10" />
        <ComboBox x:Name="newLanguage" Grid.Column="1" Grid.Row="5" FontSize="15" Margin="5,10,5,10" 
                  SelectedItem="{Binding Language}"/>
        <!--PlaceOfBirth-->
        <Label Grid.Column="0" Grid.Row="6" FontSize="15" Content="Place of birth" Margin="5,10,5,10"/>
        <TextBox x:Name="newPlaceOfBirth" Grid.Column="1" Grid.Row="6" Margin="5,10,5,10" FontSize="15" VerticalContentAlignment="Center"
                 Text="{Binding PlaceOfBirth}"/>

        <!--Ok and Cancel buttons-->
        <Button Grid.Column="0" Grid.Row="7" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"
                IsDefault="True" Content="Ok" Command="local:MyCommands.Ok"/>
        <Button Grid.Column="1" Grid.Row="7" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Cancel"
                IsCancel="True" Command="local:MyCommands.Cancel"/>

    </Grid>
</Window>
