<Window x:Class="office.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:office"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Height="50" Width="300" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Background="LightGray" Orientation="Horizontal" ButtonBase.Click="StackPanel_Click">
                <Button x:Name="YesButton" Width="Auto">Yes</Button>
                <Button x:Name="NoButton" Width="Auto">No</Button>
                <Button x:Name="CancelButton" Width="Auto">Cancel</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
