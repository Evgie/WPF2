<Window x:Class="Task1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Margin="10,20,10,20" Height="40" Value="{Binding ElementName=slider, Path=Value}"/>
        <Slider x:Name="slider" Grid.Column="0" Grid.Row="1" Value="20" VerticalAlignment="Bottom" Margin="10,20,10,20" Height="40" Minimum="0" Maximum="100"/>
    </Grid>
</Window>
